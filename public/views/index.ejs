<!DOCTYPE html>
<html>
    <head>
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
            <link rel="stylesheet" type="text/css"  href="/assets/styles/styles.css">
            <script src="https://use.fontawesome.com/2aa4b33030.js"></script>
    </head>
    <body>
        <div class="Wrapper">
            <div class="form-group">
                <form class="mx-auto"  id="addMemberForm" action="/api/addTodo" method="post" autocomplete="off">
                    <input type="hidden" name="Id" value= <%= member.id %>>
                    <table class="table table-bordered table-dark">
                        <caption>Add/Update Member</caption>
                        <tr>
                            <td colspan="2">
                                <a class="btn btn-outline-secondary btn-sm"  href="/home" id="goTo_MemberList" >view all Members List</a>
                            </td>
                        </tr>
                        <tr>
                            <td><label for="userName" >User Name : </label></td>
                            <td><input class="my-2 form-control" type="text" name="userName" id="userName" value="<%= member.userName %>" required >
                                <p class="text-danger"><%= member.userNameError %></p>
                            </td>
                        </tr>
                        <tr>
                                <td><label for="toDo">To Do : </label></td>
                                <td><input class="my-2 form-control" type="text" name="toDo" id="toDo" value="<%= member.toDo %>" required> 
                                    <p class="text-danger"><%= member.toDOError %></p>
                                </td>
                            </tr>
                            <tr>
                                    <td><label for="isDone">Is Done : </label></td>
                                    <td><input class="my-2 form-control" type="text" name="isDone" id="isDone" value="<%= member.isDone %>" required> 
                                         <p class="text-danger"><%= member.isDoneError %></p>
                                      </td>
                                </tr>
                                <tr>
                                        <td><label for="hasAttachment">Has Attachment : </label></td>
                                        <td><input  class="my-2 form-control" type="text" name="hasAttachment" id="hasAttachment" value="<%= member.hasAttachment%>"  required>  
                                            <p class="text-danger"><%= member.attachmentError %></p>
                                        </td>
                                </tr>
                                <tr >
                                    <td colspan='2' style="text-align: center">
                                            <input class="my-2 addBtn form-control"  type="submit" value="Add / Update">    
                                    </td>
                                </tr>
                    </table>
                </form>
            </div>
            <div class="form-group">
                <form method="post" action="/api/search" class="mx-auto" id="idSearchForm">
                        <table class="table table-bordered table-dark">
                            <tr>
                                <td><label for="id" >ID : </label></td>
                                <td>
                                    <input class="my-2 form-control" type="text" name="ID" id="id" required>
                                    <p class="text-danger"><%= member.searchError %></p>
                                </td>
                                <td><input id="SearchBtn" class="my-2 searchBtn form-control" type="submit" value="Search"></td>
                            </tr>             
                        </table>
                        
                </form>
            </div>
        </div>

        <% if(member.hasOwnProperty('search_User') ) { %>
            <div class="PopUp Active">        
        <% } else  {%>
            <div class="PopUp Inactive">
        <%}%>
                <div class="transparentBg"></div>
                <div class="popupContent">
                        <p>userName: <%= member.search_User %></p> 
                        <p>ToDo : <%= member.search_ToDo %></p> 
                        <p>Is Done : <%= member.search_IsDone %></p> 
                        <p>Has Attachment: <%= member.search_HasAttachment %></p> 
                        <button type="button" id="closePopUp" class="btn btn-outline-primary btn-sm">close</button>
                </div>
            </div>
    </body>
    <script src="/assets/scripts/vanilla.js" type="text/javascript"></script> 
</html>

